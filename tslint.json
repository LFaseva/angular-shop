{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "import-blacklist": [
      true,
      "rxjs",
      "rxjs/Rx"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "linebreak-style": [
      true,
      "LF"
    ],
    "max-line-length": [
      true,
      140
    ],
    "member-access": true,
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single"
    ],
    "directive-selector": [
      true,
      "attribute",
      [
        "toggler",
        "form"
      ],
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      [
        "app",
        "layout",
        "ui",
        "svg",
        "modal",
        "slider",
        "article",
        "form",
        "icon",
        "report",
        "reports",
        "home",
        "outcome",
        "management-reports"
      ],
      "kebab-case"
    ],
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-console": false,
    "no-input-rename": true,
    "no-output-rename": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "directive-class-suffix": true
  }
}